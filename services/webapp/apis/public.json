          },
          {
            "in": "query",
            "name": "login",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "required": false,
            "description": "Limits results to provided login or logins. Max 50 entries."
          }
        ],
        "responses": {
          "200": {
